#Please see README before source this file
GEM5GPU_GCC_PATH=/usr/local/gcc-4.8.0
GEM5GPU_CUDA_PATH=/usr/local/cuda-6.5
GEM5GPU_PATH=$PWD
OPENCL_PATH=/usr/lib64
OPENCLORCUDA=OPENCL

export PATH=$GEM5GPU_GCC_PATH/bin:$GEM5GPU_CUDA_PATH/bin:$PATH
export LD_LIBRARY_PATH=$GEM5GPU_CUDA_PATH/include:$GEM5GPU_GCC_PATH/lib64:$LD_LIBRARY_PATH
export CUDAHOME=$GEM5GPU_CUDA_PATH

#Set OpenCL
export GEM5GPU_CUDA_OR_OPENCL=$OPENCLORCUDA

#For nvwrapper
export NVOPENCL_LIBDIR=$OPENCL_PATH
export NVWRAPPER_ROOT=$GEM5GPU_PATH/benchmarks/libopencl

#For Use PTX file
#export PTX_SIM_USE_PTX_FILE=1

#For opencv benchmarks
#opencv pkgconfig path: opencv/lib/pkgconfig
#export PKG_CONFIG_PATH=/path/to/your/opencv/pkgconfig/path
